@model Pedido

<div class="container-xxl mb-5">

    <div class="jumbotron p-3">
        <h2 class="text-light">@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card bg-dark p-3">
        <div class="card-body">
            <p class="text-light">Cliente : <strong>@Model.Nome</strong>
            <p class="text-light">Data do Pedido :  <strong>@Model.PedidoEnviado</strong>
            <p class="text-light">Número do Pedido   : <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th class="text-light">Quantidade</th>
                    <th class="text-light">Lanche</th>
                    <th class="text-light">Preço</th>
                </tr>
                        @foreach (var item in Model.PedidoItens)
                        {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td class="text-light">@item.Quantidade</td>
                        <td class="text-light">@item.Lanche.Nome</td>
                        <td class="text-light">@item.Lanche.Preco</td>
                    </tr>
                        }
            </table>

            <h4 class="text-light">Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <a asp-controller="Home" asp-action="Index">
        <button class="btn btn-primary">Retornar</button>
    </a>
</div>