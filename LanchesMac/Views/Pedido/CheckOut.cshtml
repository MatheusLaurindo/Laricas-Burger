@model Pedido

<style>
    .input-personalizado, .input-personalizado:active {
        background-color: #4f4f4f;
        border: none;
        border-radius: 4px;
        outline: none;
        caret-color: #F13B43;
        color: white;
        border: none;
        outline: none;
        display: block;
        width: 100%;
        padding: .375rem .75rem;
        transition: 0.2s ease-in-out;
    }
</style>

<div class="container-xxl mb-5">
    <h3 class="p-3 text-light">Finalizando pedido</h3>

    <hr />

    <form asp-action="CheckOut" method="post" class="form-horizontal" role="form">
        <div class="row mt-2">
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="control-label text-light"></label>
                <input asp-for="Nome" class="input-personalizado" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Sobrenome" class="control-label text-light"></label>
                <input asp-for="Sobrenome" class="input-personalizado" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="form-group col-md-6">
                <label asp-for="Endereco1" class="control-label text-light"></label>
                <input asp-for="Endereco1" class="input-personalizado" />
                <span asp-validation-for="Endereco1" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Endereco2" class="control-label text-light"></label>
                <input asp-for="Endereco2" class="input-personalizado" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="form-group col-md-4">
                <label asp-for="Cep" class="control-label text-light"></label>
                <input asp-for="Cep" class="input-personalizado" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Cidade" class="control-label text-light"></label>
                <input asp-for="Cidade" class="input-personalizado" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Estado" class="control-label text-light"></label>
                <input asp-for="Estado" class="input-personalizado" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="form-group col-md-6">
                <label asp-for="Telefone" class="control-label text-light"></label>
                <input asp-for="Telefone" class="input-personalizado" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label text-light"></label>
                <input asp-for="Email" class="input-personalizado" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row mt-2">
            <div class="form-group d-flex flex-row">
                <input class="btn btn-success me-2" type="submit" value="Concluir pedido" />
                <button class="btn btn-outline-info" asp-controller="CarrinhoCompra" asp-action="Index">Voltar ao carrinho</button>
            </div>
        </div>
    </form>

</div>
