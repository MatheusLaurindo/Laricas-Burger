@model LoginViewModel

@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="d-flex justify-content-center">
                    <div class="card" style="border-radius: 1rem; width: 500px;">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center justify-content-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Account" asp-action="Register" method="post">

                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Crie sua conta</h3>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17">Usuário</label>
                                        <input type="text" class="form-control shadow-none" asp-for="UserName" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label">Senha</label>
                                        <input type="password" class="form-control shadow-none" asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    @if (ViewBag.RegisterError != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <p>@ViewBag.RegisterError</p>
                                        </div>
                                    }

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg w-100" type="submit">Registrar</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
