@model LoginViewModel

@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="d-flex justify-content-center">
                    <div class="card" style="border-radius: 1rem; width: 500px;">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center justify-content-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Account" asp-action="Login" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span><img src="~/images/logo.png" width="50px" class="me-2" /></span>
                                        <span class="h1 fw-bold mb-0">Larica's Burger</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Faça login com sua conta</h5>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17">Usuário</label>
                                        <input type="text" class="form-control shadow-none" asp-for="UserName" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label">Senha</label>
                                        <input type="password" class="form-control shadow-none" asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg w-100" type="submit">Login</button>
                                    </div>

                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <p>@ViewBag.Error</p>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-center">
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Não possui uma conta? <a asp-controller="Account" asp-action="Register"
                                                                     style="color: #393f81;">Cadastre-se</a>
                                        </p>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
