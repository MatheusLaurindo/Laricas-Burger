@model IEnumerable<Categoria>

<style>
    #editIcon:hover {
        transform: scale(1.3);
        transition: 0.2s ease-in-out;
    }

    #deleteIcon:hover {
        transform: scale(1.3);
        transition: 0.2s ease-in-out;
    }

    #addBtn:hover {
        transform: scale(1.1);
        transition: 0.2s ease-in-out;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Categorias</h2>
        <a id="addBtn" asp-controller="AdminCategoria" asp-action="Adicionar" class="btn btn-danger mt-4 mb-4">Adicionar categoria</a>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped mt-2">
            <tr class="bg-danger">
                <th class="text-light">@Html.DisplayNameFor(model => model.CategoriaNome)</th>
                <th class="text-light">@Html.DisplayNameFor(model => model.Descricao)</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr id="linhaTbl">
                    <td>@Html.DisplayFor(modelItem => item.CategoriaNome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td><a id="editIcon" asp-controller="AdminCategoria" asp-action="Editar" asp-route-id="@item.CategoriaId"><i id="editIcon" class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a id="deleteIcon" asp-controller="AdminCategoria" asp-action="Deletar" asp-route-id="@item.CategoriaId"><i id="deleteIcon" class="fa-solid fa-trash"></a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="container d-flex justify-content-center mt-5" style="border-bottom: 1px solid #2C3E50">
            <p>Nenhum vendedor cadastrado.</p>
        </div>
    }
</div>
