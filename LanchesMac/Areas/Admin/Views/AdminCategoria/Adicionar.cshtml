@model Categoria

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Adicionar Categoria</h2>
    </div>
    <form asp-controller="AdminCategoria" asp-action="Adicionar" method="post">
        <div class="mb-3 col-md-6">
            <label class="form-label">Nome</label>
            <input asp-for="CategoriaNome" type="text" class="form-control">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Descrição</label>
            <input asp-for="Descricao" type="text" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Adicionar</button>
    </form>
</div>